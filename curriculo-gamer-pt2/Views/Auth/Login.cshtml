@{
    ViewData["Title"] = "Home Page";
}

<h1>Login</h1>
@model curriculo_gamer_pt2.Models.DTOs.LoginDto
<form method="post" asp-action="Login" asp-controller="Auth">
    <div class="form-group mb-1">
        <label for="Email">E-mail</label>
        <input class="form-control" id="Email" type="email" asp-for="Email" required placeholder="Email..." />
    </div>
    <div class="form-group mb-1">
        <label for="Senha" >Senha</label>
        <input class="form-control" id="Senha" type="password" asp-for="Senha" required placeholder="Senha..." />
    </div>
    <button class="btn btn-primary mt-2" type="submit">Entrar</button>

</form>